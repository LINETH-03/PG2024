@model PG2024.Models.ViewModels.AddInventarioViewModel

@{ ViewBag.Title = Model.Cantidad == 0 ? "Agregar Unidades" : "Agregar Inventario"; }

<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="col-lg-12">
        @using (Html.BeginForm(Model.Cantidad == 0 ? "AddUnits" : "Add", "Inventario", FormMethod.Post, new { role = "form", @class = "" }))
        {
            <div>
                <div class="form-group">
                    @Html.LabelFor(d => d.ProductoID)
                    @Html.DropDownListFor(d => d.ProductoID, Model.Productos, new { @class = "form-control", @disabled = "disabled" })
                    @Html.HiddenFor(d => d.ProductoID)
                    @Html.ValidationMessageFor(d => d.ProductoID, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(d => d.TiendaID)
                @Html.DropDownListFor(d => d.TiendaID, Model.Tiendas, new { @class = "form-control", @disabled = "disabled" })
                @Html.HiddenFor(d => d.TiendaID)
                @Html.ValidationMessageFor(d => d.TiendaID, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(d => d.Cantidad)
                @Html.TextBoxFor(d => d.Cantidad, new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.Cantidad, "", new { @class = "text-danger" })
            </div>

            <div style="text-align: right">
                <input type="submit" class="btn btn-success" value="@(Model.Cantidad == 0 ? "Agregar Unidades" : "Crear")" />
            </div>}
    </div>
</div>